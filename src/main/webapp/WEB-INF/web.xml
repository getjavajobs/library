<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<filter>
		<filter-name>MyFilter</filter-name>
		<filter-class>com.getjavajobs.library.webui.MyFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>MyFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>ReaderServlet</servlet-name>
		<servlet-class>com.getjavajobs.library.webui.ReaderServlet</servlet-class>
		<init-param>
			<param-name>pathToFile</param-name>
			<param-value>jdbc.properties</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>ReaderServlet</servlet-name>
		<url-pattern>/readers/*</url-pattern>
	</servlet-mapping>

</web-app>